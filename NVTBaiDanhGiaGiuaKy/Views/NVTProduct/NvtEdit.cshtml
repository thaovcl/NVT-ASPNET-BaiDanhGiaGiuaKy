                <div class="checkbox">
                    @Html.EditorFor(model => model.NvtisActive)
                    @Html.ValidationMessageFor(model => model.NvtisActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                <a href="@Url.Action("NvtIndex", "NVTProduct")" name="nvtBtnBack" class="btn btn-success">Nvt: Back</a>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
